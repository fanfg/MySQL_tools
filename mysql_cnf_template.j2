
[client]
#port = {{db_port}}
#socket = /data/mysql{{db_port}}/mysql.sock
prompt = \\U:\\d \\R:\\m:\\s>

[mysql]
default-character-set = utf8
auto-rehash
pager=more
show-warnings
skip-name-resolve

[mysqldump]
default-character-set = utf8
max_allowed_packet = 16M

[mysqld]
# ---------- BASE CONFIGURE ----------
default_password_lifetime=0
slave-parallel-type=LOGICAL_CLOCK
slave-parallel-workers=40
log_timestamps = SYSTEM
#sql_mode = STRICT_TRANS_TABLES,NO_ZERO_IN_DATE,NO_ZERO_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER,NO_ENGINE_SUBSTITUTION
user = mysql
port = {{ db_port }}
basedir = /usr/local/mysql
datadir = /data/mysql{{ db_port }}/
log-error=/data/mysql{{ db_port }}/mysql.err
log-bin=/data/mysql{{ db_port }}/mysql-bin
pid-file=/data/mysql{{ db_port }}/mysql-mysql.pid
socket = /data/mysql{{ db_port }}/mysql.sock
skip-name-resolve
character-set-server = utf8
skip-external-locking = 1
lower_case_table_names = 1
transaction-isolation = READ-COMMITTED
explicit_defaults_for_timestamp = on
default_time_zone = '+08:00'

# ---------- CACHES AND LIMITS ----------
read_buffer_size = 1M
join_buffer_size = 2M
sort_buffer_size = 4M
read_rnd_buffer_size = 512K
max_length_for_sort_data = 1024
tmp_table_size = 256M
max_heap_table_size = 64M
max_connections = {{ max_connections }}
thread_cache_size = 64
connect_timeout = 20
net_read_timeout = 30
net_write_timeout = 60
wait_timeout = 1000
interactive_timeout = 1000
back_log = 1000

# ---------- BINLOG ----------
binlog_format = row
binlog_row_image = noblob
binlog_cache_size = 4M
max_binlog_size = 1G
log_bin_trust_function_creators = 1
#binlog-checksum=CRC32
slave_allow_batching = 1
master-verify-checksum=1
slave-sql-verify-checksum=1
sync_binlog = 1  #0和1TPS相差3倍，活动期间动态改成0

# ---------- LOGGING ----------
slow_query_log = 1
long_query_time = 1
log_output = table
expire_logs_days =10
log_error_verbosity=3

# ---------- INNODB SPECIFIC OPTIONS ----------
innodb_data_home_dir = /data/mysql{{ db_port }}/
innodb_data_file_path = ibdata1:512M:autoextend
innodb_log_group_home_dir = /data/mysql{{ db_port }}/
innodb_buffer_pool_size = {{ ibp_size }}
innodb_flush_log_at_trx_commit = 2
innodb_log_file_size = 512M
innodb_read_io_threads=8
innodb_write_io_threads=8
innodb_thread_concurrency=80
innodb_print_all_deadlocks = 1
innodb_file_per_table = 1
innodb_buffer_pool_load_at_startup = 1
innodb_buffer_pool_dump_at_shutdown = 1
innodb_buffer_pool_dump_pct = 60
innodb_buffer_pool_instances = 8
innodb_fast_shutdown = 1
#innodb_file_format = Barracuda
#innodb_file_format_check = Barracuda
#innodb_additional_mem_pool_size = 16M
#innodb_log_buffer_size = 16M
#innodb_log_files_in_group = 5
#innodb_max_dirty_pages_pct = 75
#innodb_flush_method = O_DIRECT
#innodb_lock_wait_timeout = 120
innodb_doublewrite = 0
#innodb_adaptive_hash_index = 1

## ---------- REPLICATION RELATED SETTINGS ----------
master-info-repository = TABLE
relay-log-info-repository = TABLE
relay-log=/data/mysql{{ db_port }}/mysql-relay-bin
relay-log-index = relay-bin.index
log_slave_updates = 1
relay_log_purge = 1
relay_log_recovery= 1
skip-slave-start
gtid_mode=ON
enforce_gtid_consistency=ON
binlog_checksum=NONE
slave_pending_jobs_size_max=134217728
server-id={{ server_id }}

#Group Replication Settings
plugin_load ="group_replication=group_replication.so"

